<h1><%= @question.title %></h1>
<br>
<div class="row">
	<div class="col-md-1">
		<h2><%= @question.votes %></h2>
	</div>
	<div class="col-md-11">
		<p><%= @question.description %></p>
		<hr>
		<h3>Comentarios</h3>

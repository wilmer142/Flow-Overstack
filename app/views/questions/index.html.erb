<h1>Preguntas</h1>
<%= link_to 'Añadir Pregunta', new_question_path, class: "btn btn-primary" %>
<% @questions.each do |question| %>	
	<hr>
	<div class="row">
		<div class="col-md-1">
			<div class="container-votes">
				<h2><%= question.votes.length %></h2>
				<h5>Votos</h5>	
			</div>
		</div>

		<div class="col-md-1">
			<div class="container-votes">
				<h2><%= question.answers.length %></h2>
				<h5>Respuestas</h5>	
			</div>
		</div>

		<div class="col-md-10">
			<div class="questions container-votes" style="align-items: flex-start;" >
				<h2><%= link_to "#{question.title}", question_path(question), class: 'question-title' %></h2>
				<h5>Preguntó <%= question.user.email %> hace 
					<% tiempo_pregunta_creada = ((Time.now - question.created_at) / 1.hour).round %>
					<% if tiempo_pregunta_creada < 25 %>
						<%= "#{tiempo_pregunta_creada} horas" %>
					<% else %>
						<%= "#{(tiempo_pregunta_creada / 24 ).round} días" %>
					<% end %>
				</h5>	
			</div>
		</div>

	</div>
<% end %>
